{
    "compilerOptions": {
        "paths": {
            "@/*": ["./src/*"]
        },
        "rootDir": "./src",
        "outDir": "./dist",
        "module": "es6",
        "target": "es6",
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "strict": true,
        "jsx": "react-jsx",
        "verbatimModuleSyntax": true,
        "isolatedModules": true,
        "noUncheckedSideEffectImports": true,
        "skipLibCheck": true,
        "esModuleInterop": true,

        "lib": ["dom", "esnext"],
        "moduleResolution": "bundler"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "./dist"
    ]
}
